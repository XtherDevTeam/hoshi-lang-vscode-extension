{
  "name": "hoshi-lang",
  "displayName": "Hoshi Language Support",
  "description": "Syntax highlighting and debug support for the Hoshi language.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Debuggers"
  ],
  "activationEvents": [
    "onLanguage:hoshi",
    "onDebug"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "breakpoints": [{ "language": "hoshi" }],
    "languages": [
      {
        "id": "hoshi",
        "aliases": [
          "Hoshi",
          "hoshi"
        ],
        "extensions": [
          ".hoshi"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hoshi",
        "scopeName": "source.hoshi",
        "path": "./syntaxes/hoshi.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "18.x",
    "typescript": "^5.3.3",
    "eslint": "^8.56.0",
    "@typescript-eslint/parser": "^6.19.1",
    "@typescript-eslint/eslint-plugin": "^6.19.1"
  }
}
